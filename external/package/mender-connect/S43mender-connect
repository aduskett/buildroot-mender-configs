#!/bin/sh
#
# Starts mender-connect service.
#

start() {
	printf "Starting mender-connect service: "
	umask 077

	start-stop-daemon -S -q -b -m -p /var/run/mender-connect.pid \
		--exec /usr/bin/mender-connect -- -daemon
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}
stop() {
	printf "Stopping mender service: "
	start-stop-daemon -K -q -p /var/run/mender-connect.pid
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}
restart() {
	stop
	start
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart|reload)
		restart
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
esac

exit $?

